{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "types": ["@testing-library/jest-dom", "node"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    /* Type Checking */
    "strict": false,
    "skipLibCheck": true,
    /* Skip type checking all .d.ts files. */
    "jsx": "react"
  },
  "exclude": ["node_modules","jest.config.js", "**/__mocks__/*"]
}